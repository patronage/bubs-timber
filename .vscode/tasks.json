{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Wordpress ACF Fix",
      "type": "shell",
      "command": "chmod -R 777 wp-content/themes/timber/acf-json"
    },
    {
      "label": "Wordpress DB Export Production",
      "type": "shell",
      "command": "cd ./ && bash _build/db.sh export production"
    },
    {
      "label": "Wordpress DB Export Staging",
      "type": "shell",
      "command": "cd ./ && bash _build/db.sh export staging"
    },
    {
      "label": "Wordpress DB Import",
      "type": "shell",
      "command": "cd ./ && bash _build/db.sh import"
    },
    {
      "label": "Wordpress Media Export Production",
      "type": "shell",
      "command": "cd ./ && bash _build/db.sh media production"
    },
    {
      "label": "Wordpress Dev",
      "type": "shell",
      "command": "docker-compose up --build"
    },
    {
      "label": "Gulp Dev",
      "type": "shell",
      "command": "cd ./ && npm run dev"
    },
    {
      "label": "Wordpress Docker Recreate",
      "type": "shell",
      "command": "docker-compose up --build --force-recreate --no-deps"
    },
    {
      "label": "Wordpress Composer Install",
      "type": "shell",
      "command": "cd ./ && composer install --ignore-platform-reqs"
    },
    {
      "label": "Wordpress Composer Update",
      "type": "shell",
      "command": "cd ./ && composer update --ignore-platform-reqs"
    },
    {
      "label": "WP Engine Deploy Production",
      "type": "shell",
      "command": "cd ./ && bash _build/deploy.sh production"
    },
    {
      "label": "WP Engine Deploy Staging",
      "type": "shell",
      "command": "cd ./ && bash _build/deploy.sh staging"
    }
  ]
}
